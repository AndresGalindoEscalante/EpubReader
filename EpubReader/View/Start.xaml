<Window x:Class="EpubReader.View.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpubReader.View"
        mc:Ignorable="d"
        Title="Start" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="BooksBinding" HorizontalAlignment="Center"
                  Height="189" VerticalAlignment="Center"
                  Width="572"
                  d:ItemsSource="{d:SampleData ItemCount=5}">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Remove Book" Click="DeleteBook"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <Button Content="Add Book" HorizontalAlignment="Left" Margin="100,35,0,0" VerticalAlignment="Top" Click="AddBookButton" Height="57" Width="118"/>
        <Grid Margin="691,123,3,122"/>

    </Grid>
</Window>
